{
  
  "entrypoint": "index.html",
  
  "shell": "src/sp-shell.html",
  
  "fragments": [
    "src/sp-upload.html",
    "src/sp-console.html"
  ],
  
  "sources": [
   "src/**/*",
   "images/**/*"
  ],
  
  "extraDependencies": [
    "bower_components/webcomponentsjs/*",
    "manifest.json",
    "src/**/*",
    "images/**/*",
    "favicon.ico"
  ],

  "betterPolymerBuild": {
    "skipTypes": {
      "js": true
    },
    "ignoredFiles": [
      "src/src/**/*",
      "src/sp-console.html_script_1.js"
    ],
    "sections": {
      "src/js/index.js": {
        "DEV-ANALYTICS-OVERWRITE": {
          "action": "delete-in-between"
        },
        "SERVICE-WORKER": {
          "action": "delete-tag"
        }
      },
      "src/sp-console.html": {
        "POLYMER-BUILD-FIX-CONSOLE": {
          "action": "delete-in-between"
        },
        "POLYMER-BUILD-FIX-CONSOLE-PROPER": {
          "action": "delete-tag"
        }
      },
      "src/sp-upload.html": {
        "POLYMER-BUILD-FIX-UPLOADER": {
          "action": "delete-in-between"
        },
        "POLYMER-BUILD-FIX-UPLOADER-PROPER": {
          "action": "delete-tag"
        }
      }
    }
  },
  
  "lint": {
    "rules": [ "polymer-2" ]
  }
  
}
